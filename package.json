{
  "name": "change-data-capturer-ms",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/pagopa/change-data-capturer-ms.git",
  "author": "Davide Marro <davide.marro@pagopa.it>",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint \"src/**\"",
    "lint:fix": "eslint --fix \"src/**\"",
    "start-ts": "ts-node -r dotenv/config src/index.ts",
    "start-test": "ts-node -r dotenv/config src/utils/test.ts",
    "start": "node -r dotenv/config dist/index.js",
    "build": "tsc --outDir dist",
    "test": "jest --coverage  --passWithNoTests ./src",
    "code-review": "yarn lint && yarn test"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "node_modules/variables/.+\\.(j|t)sx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!variables/.*)"
    ]
  },
  "dependencies": {
    "@azure/cosmos": "^4.0.0",
    "@pagopa/winston-ts": "^2.2.0",
    "fp-ts": "^2.16.1"
  },
  "devDependencies": {
    "@pagopa/eslint-config": "^3.0.0",
    "@rushstack/eslint-patch": "^1.6.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^40.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.33.2",
    "jest": "^29.7.0",
    "prettier": "^3.0.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  }
}
